{
 "firebase": "app-onsite",
 "hosting": {
   "public": "dist",
 "ignore": [
   "firebase.json",
   "**/.*",
   "**/node_modules/**"
 ],
 "rewrites": [
   {
     "source": "/public/**",
     "destination": "/public.html"
   },
   {
     "source": "**",
     "destination": "/index.html"
   }
 ]
 },
 "database": {
   "rules": "database.rules.json"
 }
}
